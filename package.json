{
  "name": "pikme",
  "version": "1.0.0",
  "private": true,
  "description": "Local-first Board Game Night Game Selector",
  "scripts": {
    "dev": "npm --prefix apps/web run dev",
    "build": "npm --prefix apps/web run build",
    "lint": "npm --prefix apps/web run lint",
    "test": "npm --prefix apps/web run test",

    "w:dev": "npm --prefix apps/web run dev",
    "w:build": "npm --prefix apps/web run build",
    "w:lint": "npm --prefix apps/web run lint",
    "w:test": "npm --prefix apps/web run test",

    "functions:build": "npm --prefix functions run build",
    "functions:install": "npm --prefix functions install",
    "fn:build": "npm --prefix functions run build",
    "fn:lint": "npm --prefix functions run lint",

    "emulators": "firebase emulators:start",
    "emulators:import": "firebase emulators:start --import=./.firebase-emulator-data",
    "emulators:export": "firebase emulators:export ./.firebase-emulator-data",

    "emu": "firebase emulators:start",
    "emu:import": "firebase emulators:start --import=./.firebase-emulator-data",
    "emu:export": "firebase emulators:export ./.firebase-emulator-data",

    "emu:j21": "node tools/run-emulators-java21.mjs emulators:start",
    "emu:j21:import": "node tools/run-emulators-java21.mjs emulators:start --import=./.firebase-emulator-data",
    "emu:j21:export": "node tools/run-emulators-java21.mjs emulators:export ./.firebase-emulator-data"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pikme.git"
  },
  "license": "MIT",
  "devDependencies": {
    "firebase-admin": "^13.6.0"
  }
}
